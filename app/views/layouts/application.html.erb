<!DOCTYPE html>
<html>
  <head>
    <title>Splurty</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header class="row">
      <div class="circle">
        <br />
        JOIN
        <br />
        BOOK
        <br />
        CLUB
      </div>
      <div class="col-4 slogan">
        Talk WORDY to me 
      </div>
      <div class="col-5 links">
        <%= link_to 'Contribute', '#' %>
        <%= link_to 'About', '#' %>
    </header>

    <hr />

    <br class="clear" />
    <div class="container">
    <%= yield %>
  </div>

  <div class="footer">
      <div class="container">
        <div class="row">
          <div class="col-6">
          <%= link_to "Knowledge is power", "#", class: 'next-quote' %>
          </div>
          <div class="col-6 footer-blurb">
          Created by <a href="[https://fyassin.netlify.com]">[Faneeza Yassin]</a><br />
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
